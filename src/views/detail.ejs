<%- include('layout/header'); %>
<%- include('layout/navbar'); %>
<div class="container-fluid p-4">
  <div class="card" style="width: 30rem;">
    <img src="<%= contact.pictureUrl %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= contact.name %> <%= contact.lastName %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= contact.email %></li>
      <li class="list-group-item"><%= contact.birthDate %></li>
    </ul>
    <div class="card-footer">
      <a href="/" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i>
        Volver
      </a>
      <a href="/<%= contact.id %>/edit" class="btn btn-warning">
        <i class="bi bi-pencil me-2"></i>
        Editar
      </a>
    </div>
  </div>
</div>
<%- include('layout/footer') %>